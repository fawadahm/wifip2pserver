<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nsl.serverwifip2p.MainActivity">

    <TextView
    android:id="@+id/HelloWorldTextField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DEV NAME : " />

    <TextView
        android:id="@+id/WiFiDevicesField"
        android:layout_below="@id/HelloWorldTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI P2P STATE : " />


    <TextView
        android:id="@+id/InitialDiscovery"
        android:layout_below="@id/WiFiDevicesField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INITIAL DISCOVERY : " />


    <TextView
        android:id="@+id/PeersAvailable"
        android:layout_below="@id/InitialDiscovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NETWORK CONNECTIVITY : " />


    <TextView
        android:id="@+id/NetworkState"
        android:layout_below="@id/PeersAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NETWORK CONNECTIVITY : " />

    <TextView
        android:id="@+id/State"
        android:layout_below="@id/NetworkState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P2P NETWORK STATE : " />


    <TextView
        android:id="@+id/GroupOwner"
        android:layout_below="@id/State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P2P NETWORK POSITION : " />

    <TextView
        android:id="@+id/SocketState"
        android:layout_below="@id/GroupOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOCKET STATE : " />


    <TextView
        android:id="@+id/DataRate"
        android:layout_below="@id/SocketState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA Rate : " />


    <TextView
        android:id="@+id/DataSentOrReceived"
        android:layout_below="@id/DataRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA Rate : " />


    <Button
        android:id="@+id/StartButton"
        android:layout_below="@id/DataSentOrReceived"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Start Session"
        android:onClick="buttonPress" />







</RelativeLayout>
